<h1 class="mt-4">Dashboard</h1>
<p class="lead mb-3">Welcome <%= user.name %>
</p>
<p class="lead mb-3">
    <% if (user.role) { %>
        Your role is <%= user.role %>.
        <% if (user.role === 'admin') { %>
            <p>Go to <a href="/adminboard">admin page</a> </p>
        <% } %>
    <% } else { %>
        You do not have any role.
    <% } %>
</p>
<a href="/auth/logout" class="btn btn-secondary">Logout</a>